/* pages/tasks/tasks.wxss */
.task-list {
  background-color: #e2dfdf;
}
.task {
  height: 300rpx;
  border: chartreuse;
  border-radius: 20rpx;
  background-color: #fff;
  margin: 12rpx 16rpx 0rpx 16rpx;
}
.empty {
  height: 1rpx;
  border-style: none; 
  background-color: #e2dfdf;
}
.task-header {
  background-color: #000;
  height: 40rpx;
  border-top-left-radius: 18rpx;
  border-top-right-radius: 18rpx;
  padding: 0rpx 20rpx 16rpx 20rpx;
}
.task-header pic {
  background:   url(../images/time.png) no-repeat 5px 5px;
}
.task-header text {
  font-size: 26rpx;
  color: #fff;
}
.btn {
  width:20%;
  display: inline-block;
  background-color: crimson;
  text-align: center;
}

.text-content {
  margin-top: 30rpx;
  width:60%;
  display: inline-block;
  font-size: large;
  text-align: center;
}